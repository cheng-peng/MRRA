<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/room_bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="增加数据" />

        <Button
            android:id="@+id/room_bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="查询数据" />

        <Button
            android:id="@+id/room_bt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="修改数据" />

        <Button
            android:id="@+id/room_bt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="删除数据" />

        <Button
            android:id="@+id/room_bt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="批量增加数据" />

        <Button
            android:id="@+id/room_bt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="批量修改数据" />

        <Button
            android:id="@+id/room_bt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="批量删除数据" />


        <Button
            android:id="@+id/room_bt8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="增加Book数据" />

        <Button
            android:id="@+id/room_bt9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="查询Book数据" />

        <Button
            android:id="@+id/room_bt10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="多表查询" />

        <Button
            android:id="@+id/room_bt11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="条件查询" />

        <TextView
            android:id="@+id/room_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#f00"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>